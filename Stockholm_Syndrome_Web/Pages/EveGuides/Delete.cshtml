@page
@model Stockholm_Syndrome_Web.Pages.EveGuides.DeleteModel

<h2 class="text-center m-4">Are you sure you want to delete this?</h2>
<div class="container">
	<div class="row mx-md-5 justify-content-md-center">
		<div class="col-5 p-4 border-fancy">
			<div class="form-group">
				<label asp-for="EveGuides.Title" class="control-label"></label>
				<input asp-for="EveGuides.Title" disabled class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="EveGuides.Description" class="control-label"></label>
				<input asp-for="EveGuides.Description" disabled class="form-control" />
			</div>
		</div>
	</div>
	<div class="row mx-md-5 justify-content-md-center">
		<div class="col-5 border-fancy">
			<form method="post">
				<div class="form-group">
					<input type="hidden" asp-for="EveGuides.Id" />
					<input type="submit" value="Delete" class="btn btn-danger mt-3 mx-3" style="width:200px" />
					<a asp-page="./Index" class="btn btn-primary mt-3 mx-3" style="width:110px">Back to List</a>
				</div>
			</form>
		</div>
	</div>
</div>