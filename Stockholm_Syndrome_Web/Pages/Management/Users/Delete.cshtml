@page
@model Stockholm_Syndrome_Web.Pages.Management.Users.DeleteModel

<div class="row justify-content-center">
	<div class="col-6 m-md-4">
		<div class="row mx-md-5 border-fancy justify-content-center">
			<div class="col-12 m-md-2">
				<h5 class="text-center mb-0">Are you sure you want to delete this user?</h5>
			</div>
		</div>
		<div class="row mx-md-5 border-fancy justify-content-center">
			<div class="col-4 m-md-4">
				<div class="form-group">
					<label asp-for="@Model.ApplicationUser.UserName" class="control-label"></label>
					<h6>@Model.ApplicationUser.UserName</h6>
				</div>
			</div>
			<div class="col-4 m-md-4">
				<div class="form-group">
					<label asp-for="@Model.ApplicationUser.DiscordName" class="control-label"></label>
					<h6>@Model.ApplicationUser.DiscordName</h6>
				</div>
			</div>
		</div>
		<div class="row mx-md-5 border-fancy justify-content-center">
			<form method="post">
				<div class="form-group">
					<input type="hidden" asp-for="ApplicationUser.Id" />
					<input type="submit" value="Delete" class="btn btn-danger mt-3 mx-3" style="width:200px" />
					<a asp-page="Index" class="btn btn-primary mt-3 mx-3" style="width:110px">Back</a>
				</div>
			</form>
		</div>
	</div>
</div>