@page
@model Stockholm_Syndrome_Web.Pages.Management.Users.EditModel
@{
	ViewData["Title"] = "Management -";
}

<hr />
<div class="row justify-content-center">
	<div class="col-md-4 border-fancy py-2">
		<h4 class="text-center">@Model.ApplicationUser.UserName</h4>

		<div class="row justify-content-between mb-3">
			<div class="col border-fancy mx-3">
				<p class="text-primary text-center">Assigned</p>
				@{
					foreach (var role in Model._userRoles.Roles)
					{
						<p>@role</p>
					}
				}
			</div>
			<div class="col border-fancy mx-3">
				<p class="text-danger text-center">Avaliable</p>
				@{
					foreach (var role in Model.applicationRoles)
					{
						<div>
							<p>↤ @role.Name</p>
						</div>
					}
				}
			</div>
		</div>
		<a asp-page="./Index">Back to List</a>
	</div>
</div>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
