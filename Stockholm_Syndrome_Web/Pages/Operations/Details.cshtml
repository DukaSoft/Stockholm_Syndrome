@page
@model Stockholm_Syndrome_Web.Pages.Operations.DetailsModel

<div>
    <h4>Ops</h4>
    <hr />
	<dl class="row border-fancy mx-md-5">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ops.OpsTime)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ops.OpsTime)
		</dd>

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ops.StagingSystemName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ops.StagingSystemName)
		</dd>

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ops.TargetSystemName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ops.TargetSystemName)
		</dd>

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ops.FcName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ops.FcName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ops.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ops.Description)
		</dd>
		<dt class="col-sm-2">
			@if (Model.Ops.Creator != null)
			{
				@Html.DisplayNameFor(model => model.Ops.Creator.DiscordName)
			}
		</dt>
		<dd class="col-sm-10">
			@if (Model.Ops.Creator != null)
			{
				@Html.DisplayFor(model => model.Ops.Creator.DiscordName)
			}
		</dd>
	</dl>
</div>
<div>
	@{
		if (User.IsInRole("OpsManager"))
		{
			<a asp-page="./Delete" asp-route-id="@Model.Ops.Id" class="text-danger">Delete</a><text> |</text>
			<a asp-page="./Edit" asp-route-id="@Model.Ops.Id">Edit</a><text> |</text>
		}
		else if (Model.Ops.Creator != null)
		{
			if (Model.Ops.Creator == User.Identity)
			{
				<a asp-page="./Delete" asp-route-id="@Model.Ops.Id" class="text-danger">Delete</a><text> |</text>
				<a asp-page="./Edit" asp-route-id="@Model.Ops.Id">Edit</a><text> |</text>
			}
		}
	}
	<a asp-page="./Index">Back to List</a>
</div>
