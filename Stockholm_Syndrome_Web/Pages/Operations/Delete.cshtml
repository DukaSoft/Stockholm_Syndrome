@page
@model Stockholm_Syndrome_Web.Pages.Operations.DeleteModel
@{
	ViewData["Title"] = "Operations - ";
}
<h4 class="text-center my-4">Are you sure you want to delete this?</h4>
<hr />
<div>
	<div class="container">
		<div class="row mx-md-5 border-fancy justify-content-center">
			<div class="col-5 m-md-4">
				<div class="form-group">
					<label asp-for="Ops.OpsTime" class="control-label"></label>
					<input asp-for="Ops.OpsTime" disabled class="form-control" />
				</div>
				<div class="form-group">
					<label asp-for="Ops.StagingSystemName" class="control-label"></label>
					<input asp-for="Ops.StagingSystemName" disabled class="form-control" />
				</div>
				<div class="form-group">
					<label asp-for="Ops.TargetSystemName" class="control-label"></label>
					<input asp-for="Ops.TargetSystemName" disabled class="form-control" />
				</div>
			</div>
			<div class="col-5 m-md-4">
				<div class="form-group">
					<label asp-for="Ops.FcName" class="control-label"></label>
					<input asp-for="Ops.FcName" disabled class="form-control" />
				</div>
				<div class="form-group">
					<label asp-for="Ops.Description" class="control-label"></label>
					<textarea asp-for="Ops.Description" disabled class="form-control" rows="5" style="resize:none"></textarea>
				</div>
			</div>
		</div>
		<div class="row mx-md-5 border-fancy justify-content-center">
			<form method="post">
				<div class="form-group">
					<input type="hidden" asp-for="Ops.Id" />
					<input type="submit" value="Delete" class="btn btn-danger mt-3 mx-3" style="width:200px" />
					<a asp-page="./Index" class="btn btn-primary mt-3 mx-3" style="width:110px">Back</a>
				</div>
			</form>
		</div>
	</div>
</div>
